<nav class="w-100 d-flex justify-content-between align-items-center">
  <a href="/doctor/profile"
    ><i class="text-white text-decoration-none fs-2 ri-account-circle-line"></i
  ></a>
  <h2 class="text-center text-white">Hello Dr. <%=doctor.username%></h2>
  <button class="btn-menu btn fs-2 text-white">
    <i class="ri-menu-line"></i>
  </button>
</nav>
<div
  class="nav-options nav-options-hide position-absolute end-0 d-flex flex-column py-5 gap-4 fs-4 rounded-bottom"
  style="
    background-color: rgba(255, 255, 255, 0.5);
    box-shadow: 0 0 10px solid white;
  "
>
  <a href="/doctor/editdoctor"
    ><button class="btn-nav-options">Edit Profile</button></a
  >

  <a href="/doctor/signOutDoctor"
    ><button class="btn-nav-options">Sign Out</button></a
  >
</div>
<script>
  document.querySelector(".btn-menu").addEventListener("click", () => {
    document.querySelector(".nav-options").classList.toggle("nav-options-hide");
    document.querySelector(".btn-menu i").classList.toggle("ri-menu-line");
    document.querySelector(".btn-menu i").classList.toggle("ri-close-line");
  });
</script>
